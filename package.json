{
  "name": "@pathscale/ui",
  "version": "0.1.0",
  "description": "Highly opinionated SolidJS component library â€” batteries and kitchen sink included, but optimized and shiny.",
  "keywords": [
    "solid",
    "solidjs"
  ],
  "homepage": "https://github.com/pathscale/ui",
  "bugs": {
    "url": "https://github.com/pathscale/ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pathscale/ui"
  },
  "license": "MIT",
  "author": "pathscale",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "solid": "./dist/index.jsx",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/components/*/index.d.ts",
      "solid": "./dist/components/*/index.jsx",
      "default": "./dist/components/*/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist node_modules",
    "dev": "vite serve playground --host",
    "format": "prettier --check --write . && sort-package-json",
    "lint": "eslint --max-warnings=0 ."
  },
  "devDependencies": {
    "@types/bun": "^1.2.12",
    "@typescript-eslint/parser": "^8.32.0",
    "esbuild-plugin-solid": "^0.6.0",
    "eslint": "^9.26.0",
    "eslint-plugin-solid": "^0.14.5",
    "prettier": "^3.5.3",
    "sort-package-json": "^3.2.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.6",
    "vite-plugin-tsconfig-paths": "^1.4.1"
  },
  "peerDependencies": {
    "solid-js": "^1.8"
  }
}
