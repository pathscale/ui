{
  "name": "@pathscale/ui",
  "version": "0.0.13",
  "author": "pathscale",
  "repository": {
    "type": "git",
    "url": "https://github.com/pathscale/ui"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/vite": "^4.1.6",
    "@types/bun": "^1.2.12",
    "esbuild-plugin-solid": "^0.6.0",
    "tailwindcss": "^4.1.6",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.6",
    "vite-tsconfig-paths": "^5.1.4",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.0"
  },
  "peerDependencies": {
    "solid-js": "^1.8"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js"
    }
  },
  "bugs": {
    "url": "https://github.com/pathscale/ui/issues"
  },
  "description": "Highly opinionated SolidJS component library â€” batteries and kitchen sink included, but optimized and shiny.",
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/pathscale/ui",
  "keywords": [
    "solid",
    "solidjs"
  ],
  "license": "MIT",
  "scripts": {
    "build": "bun run build:code && bun run build:types",
    "build:code": "bun run tsup",
    "build:types": "bun run build:types:core && bun run build:types:group1 && bun run build:types:group2 && bun run build:types:group3",
    "build:types:core": "TSUP_TYPE_GEN=true TSUP_TYPE_PART=core bun run tsup",
    "build:types:group1": "TSUP_TYPE_GEN=true TSUP_TYPE_PART=group1 bun run tsup",
    "build:types:group2": "TSUP_TYPE_GEN=true TSUP_TYPE_PART=group2 bun run tsup",
    "build:types:group3": "TSUP_TYPE_GEN=true TSUP_TYPE_PART=group3 bun run tsup",
    "clean": "rm -rf dist node_modules",
    "dev": "bun vite serve playground --host",
    "format": "bun biome format --write",
    "lint": "bun biome lint --write"
  },
  "sideEffects": false,
  "type": "module",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  }
}
